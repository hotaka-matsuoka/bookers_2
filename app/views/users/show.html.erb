<div class="body">
  <div class="container">
    <p id="notice"><%= flash[:notice] %></p>
    <div class="row">
      <%= render 'left_side' %>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table">
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <% unless @user.profile_image %>
                  <%= link_to user_path(@user) do %>
                    <%= image_tag 'no_image.jpg', size: '50x50' %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(@user) do %>
                    <%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, format: "jpg")%>
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= link_to "#{book.title}", book_path(book) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>