<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
        <%= form_with model: @book, local: true, class: :edit_book, id: :edit_book_31706 do |f| %>
          <% if @book.errors.any? %>
            <div class="alert alert-warning">
              <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="field row">
            <label for="title">Title</label>
            <%= f.text_field :title, class: "col-xs-12 book_title" %>
          </div>
          <div class="field row">
            <label for="body">Opinion</label>
            <%= f.text_area :body, class: "col-xs-12 book_body" %>
          </div>
          <div class="actions row">
            <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book), class: "book_31706" %>
        |
        <%= link_to "Back", books_path %>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>


